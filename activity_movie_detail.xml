<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@drawable/lr2">

    <View
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@drawable/rounded_corners"
        android:layout_alignParentBottom="true" />

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="60dp"
            android:layout_height="79dp"
            android:layout_marginLeft="0dp"
            android:padding="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/panah"
            android:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dustbin"
            android:layout_marginLeft="340dp"
            android:gravity="center"
            android:layout_marginTop="180dp"/>

        <ImageButton
            android:id="@+id/buttonEdit"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:gravity="center"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="180dp"
            android:src="@drawable/edit1" />

    <ImageView
        android:id="@+id/fotoMovie"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/lovelyrunner"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/judulMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="50dp"
        android:textColor="#FFFFFF"
        android:text="Lovely Runner" />

    <TextView
        android:id="@+id/genreMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="50dp"
        android:textSize="18sp"
        android:textColor="#4F5055"
        android:text="Fantasy, Romance, Comedy" />

    <TextView
        android:id="@+id/overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="50dp"
        android:textColor="#E19D12"
        android:text="Overview" />

    <TextView
        android:id="@+id/overviewMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="70dp"
        android:text="Im Sol sangat terpukul dengan kematian mendadak dan tragis bintang favoritnya, Ryu Sun-jae, mantan perenang yang menjadi idola K-pop. Namun di tengah penderitaannya, dia secara ajaib memutar waktu kembali ke tahun 2008 â€“ ketika Sun-jae masih berusia 19 tahun! Senang karena dia mempunyai kesempatan untuk membantunya menghindari nasib buruknya di masa depan, Sol menjadikan misinya untuk mengubah masa depan... dan mungkin menemukan cinta di sepanjang jalan." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_add_home_24"
            android:background="#FFFFFF"
            android:padding="16dp" />

        <ImageButton
            android:id="@+id/notif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_add_alert_24"
            android:background="#FFFFFF"
            android:padding="16dp" />

        <ImageButton
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_add_circle_outline_24"
            android:background="#FFFFFF"
            android:padding="16dp" />

        <ImageButton
            android:id="@+id/bookmark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bookmark"
            android:background="#FFFFFF"
            android:padding="16dp" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/profil1"
            android:background="#FFFFFF"
            android:padding="16dp" />
    </LinearLayout>
</RelativeLayout>
