<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Main content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/MovieBuddy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/rochester"
            android:padding="16dp"
            android:text="Romance"
            android:textColor="#E19D12"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/buttonNavbar"
            android:layout_width="60dp"
            android:layout_height="79dp"
            android:layout_marginLeft="0dp"
            android:padding="16dp"
            android:src="@drawable/panah"
            android:tint="#FFFFFF" />

        <!-- Categories -->
        <LinearLayout
            android:id="@+id/textRekomendasi"
            android:layout_width="match_parent"
            android:layout_height="352dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/buttonRomance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Romance"
                    android:padding="dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pinokio" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="pinokio"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/buttonHorror"
                    android:layout_width="221dp"
                    android:layout_height="111dp"
                    android:adjustViewBounds="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Horror"
                    android:padding="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/argantara" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Argantara"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Image Views for Movies List -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/film_image7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:padding="30dp"
                android:src="@drawable/filem7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:gravity="center"
                android:text="Film 7"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Bottom Navigation Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageViewHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Home"
                android:padding="16dp"
                android:src="@drawable/baseline_add_home_24" />

            <ImageView
                android:id="@+id/imageViewNotif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Notif"
                android:padding="16dp"
                android:src="@drawable/baseline_add_alert_24" />

            <ImageView
                android:id="@+id/imageViewAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Add"
                android:padding="16dp"
                android:src="@drawable/baseline_add_circle_outline_24" />

            <ImageView
                android:id="@+id/imageViewFavorites"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Favorites"
                android:padding="16dp"
                android:src="@drawable/bookmark" />

            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Profile"
                android:padding="16dp"
                android:src="@drawable/profil1" />
        </LinearLayout>

    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
