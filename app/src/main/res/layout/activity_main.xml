<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Main content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/film6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#E19D12"
            android:drawableLeft="@drawable/filem1"
            android:drawablePadding="8dp"
            android:padding="30dp"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/film7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#E19D12"
            android:drawableLeft="@drawable/filem2"
            android:drawablePadding="8dp"
            android:padding="30dp"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/MovieBuddy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="MovieBuddy"
            android:textColor="#E19D12"
            android:textSize="40sp"
            android:fontFamily="@font/rochester"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/textAjakan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Letâ€™s watch movie together"
            android:textColor="#4F5055"
            android:textSize="20sp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Kategori"
            android:textColor="#E19D12"
            android:textSize="20sp"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/seeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Lihat lainnya"
            android:textColor="#4F5055"
            android:textSize="15sp"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="275dp"/>

        <ImageView
            android:id="@+id/buttonNavbar"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginLeft="-20dp"
            android:padding="16dp"
            android:src="@drawable/menu" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="320dp"
            android:padding="16dp"
            android:src="@drawable/cinema" />

        <!-- Categories -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/textRekomendasi"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="16dp"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/buttonRomance"
                android:layout_width="12dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Romance"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/romance" />

            <ImageButton
                android:id="@+id/buttonComedy"
                android:layout_width="12dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Romance"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/comady" />

            <ImageButton
                android:id="@+id/buttonHorror"
                android:layout_width="12dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Romance"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/horror" />

            <ImageButton
                android:id="@+id/buttonAction"
                android:layout_width="12dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Romance"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/action" />


            <ImageButton
                android:id="@+id/buttonThriller"
                android:layout_width="12dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Romance"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/thriller" />

        </LinearLayout>

        <!-- RecyclerView for Movies List -->

        <!-- Bottom Navigation Bar -->

        <Button
            android:id="@+id/film1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#E19D12"
            android:padding="30dp"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/film2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="290dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#E19D12"
            android:padding="30dp"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/film3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#E19D12"
            android:padding="30dp"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/film4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="470dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#E19D12"
            android:padding="30dp"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/film5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="560dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#E19D12"
            android:padding="30dp"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageViewHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_add_home_24"
                android:contentDescription="Home"
                android:padding="16dp" />

            <ImageView
                android:id="@+id/imageViewNotif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_add_alert_24"
                android:contentDescription="Notif"
                android:padding="16dp" />

            <ImageView
                android:id="@+id/imageViewAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_add_circle_outline_24"
                android:contentDescription="Add"
                android:padding="16dp" />

            <ImageView
                android:id="@+id/imageViewFavorites"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/bookmark"
                android:contentDescription="Favorites"
                android:padding="16dp" />

            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/profil1"
                android:contentDescription="Profile"
                android:padding="16dp" />
        </LinearLayout>

    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
