<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"> <!-- Background hitam -->

    <!-- Foto Profil -->
    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wajah" /> <!-- Ganti dengan gambar profil -->

    <!-- Nama Pengguna -->
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewProfile"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Lestari kun"
        android:textColor="#FFA500"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Jumlah Rekomendasi -->
    <TextView
        android:id="@+id/textViewRecommendations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewName"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="5 Rekomendasi"
        android:textColor="#808080"
        android:textSize="16sp" />

    <!-- Menu Items -->
    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewRecommendations"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewMyRecommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#404040"
            android:padding="16dp"
            android:text="Rekomendasi Saya"
            android:textColor="#FFA500"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewBookmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#404040"
            android:padding="16dp"
            android:text="Markah"
            android:textColor="#FFA500"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewFAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="FAQ dan Masukan"
            android:textColor="#FFA500"
            android:textSize="18sp"
            android:background="#404040" />

        <TextView
            android:id="@+id/textViewSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Pengaturan"
            android:textColor="#FFA500"
            android:textSize="18sp"
            android:background="#404040" />

        <TextView
            android:id="@+id/textViewLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Logout"
            android:textColor="#FFA500"
            android:textSize="18sp"
            android:background="#404040" />
    </LinearLayout>

</RelativeLayout>
