<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="MainActivity">

    <TextView
        android:id="@+id/notificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        android:text="Notifikasi"
        android:textColor="#E19D12"
        android:textSize="29sp" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notificationTitle"

        android:layout_margin="dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="-32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Back Button"
        android:src="@drawable/panah"
        android:tint="#FFFFFF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="567dp"
        android:layout_below="@id/backButton"
        android:layout_marginTop="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:background="@drawable/card_background"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/godzillaKongImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/godzzila" />

                <TextView
                    android:id="@+id/godzillaKongTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/godzillaKongImage"
                    android:text="Godzilla x Kong menyerukan kaiju untuk"
                    android:textColor="#6A6A6A"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/godzillaKongDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/godzillaKongTitle"
                    android:layout_alignParentEnd="true"
                    android:text="Hari ini"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/detailLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/godzillaKongDate"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="Lihat Detail"
                    android:textColor="#E19D12"
                    android:textSize="23sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/haikyuuImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pinokio" />

                <TextView
                    android:id="@+id/haikyuuTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/haikyuuImage"
                    android:text="Haikyuu!! menyerukan para pemain voli untuk"
                    android:textColor="#6A6A6A"
                    android:textSize="17sp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
