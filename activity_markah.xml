<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/layoutMarkah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/rochester"
            android:padding="16dp"
            android:text="Markah"
            android:textColor="#E19D12"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="60dp"
            android:layout_height="79dp"
            android:layout_marginLeft="0dp"
            android:padding="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/panah"
            android:tint="#FFFFFF" />

        <Button
            android:id="@+id/film1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#E19D12"
            android:padding="30dp"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/film2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#E19D12"
            android:padding="30dp"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/film3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#E19D12"
            android:padding="30dp"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/film4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="340dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#E19D12"
            android:padding="30dp"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/film5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="430dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#E19D12"
            android:padding="30dp"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/film6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="520dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#E19D12"
            android:padding="30dp"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/film7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="610dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#E19D12"
            android:padding="30dp"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_add_home_24"
                android:background="#FFFFFF"
                android:padding="16dp" />

            <ImageButton
                android:id="@+id/notif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_add_alert_24"
                android:background="#FFFFFF"
                android:padding="16dp" />

            <ImageButton
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_add_circle_outline_24"
                android:background="#FFFFFF"
                android:padding="16dp" />

            <ImageButton
                android:id="@+id/bookmark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/bookmark"
                android:background="#FFFFFF"
                android:padding="16dp" />

            <ImageButton
                android:id="@+id/profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/profil1"
                android:background="#FFFFFF"
                android:padding="16dp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
